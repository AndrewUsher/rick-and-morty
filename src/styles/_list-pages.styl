@import './variables.styl'

.List-Container
    background-color: $lightBrown;
    padding: 30px 50px;
    text-align: center;

    h2 
        font-family: Abel;
        font-size: 30px;
        font-weight: normal;
        margin-bottom: 30px;

    .List-Grid
        display: grid;
        grid-gap: 50px 30px;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        margin-bottom: 50px;

    
    button 
        background-color: $yellow;
        box-shadow: 5px 5px 2px rgba(#000, 10%);
        cursor: pointer;
        display: inline-block;
        font-family: Abel, sans-serif;
        font-size: 24px;
        color: #333;
        border: none;
        padding: 10px 20px;
        transition: background-color 200ms, box-shadow 250ms, color 300ms, transform 400ms; 

        &:hover 
            background-color: darken($yellow, 10%);
            box-shadow: 10px 10px 2px rgba(#000, 10%);
            color: #fff;
            transform: translate(-5px, -5px);