@import './variables.styl'

.back-arrow
    position: absolute;
    background-color: darken($green, 40%);
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 10px;
    top: 20px;
    left: 20px;
    transition: background-color 400ms, transform 500ms;

    svg 
        fill: #fefefe;
        width: 30px;
        height: 30px;
    
    &:hover 
        background-color: $green;
        transform: scale(1.3);

.Single-Info-Container
    background-color: $yellow;
    width: 100%;
    height: 93.5vh;
    display: flex;
    position: relative;
    justify-content: center;
    align-items: center;
    
    .Single-Info
        background-color: #fefefe;
        border-radius: 5px;
        display: flex;
        height: 60%;
        box-shadow: 16px 16px 1px rgba(#000, 10%);
        width: 90%;
        max-width: 1200px;

        &.Episode,
        &.Location
            display: block;
            max-width: 800px;
            text-align: center;
            height: auto;

            .Single-Info-Text 
                width: 100%;
        img 
            width: 50%;

        .Single-Info-Text
            font-family: Abel, sans-serif;
            padding: 20px 90px;
            width: 50%;

            h2 
                color: darken($green, 40%);
                font-size: 40px;

            p 
                display: flex;
                font-size: 20px;
                align-items: baseline;
                justify-content: space-between;
                border-bottom: 1px solid rgba(#111, 40%);
                padding: 16px 0;
            
                span 
                    color: rgba(#000, 70%);
            

@media (max-width: 600px)

    .Single-Info-Container
        display: block;
        padding-top: 100px;
        overflow-x: hidden;

        .Single-Info
            box-shadow: none;
            height: auto
            display: block;

            width: 80%;
            margin: 0 auto;

            img 
                width: 100%;


            .Single-Info-Text
                display: block;
                padding: 20px 30px;
                width: 100%;
    
        